<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Criar conta ou Entrar</h1>
          <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

          <%- include('includes/messages') %> 

          <div class="row">

            <div class="col-lg my-5" >
              <h4>Faça seu cadastro</h4>
              <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>

              <form class="form-cadastro" action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-goup">
                  <label for="exampleInputEmail1" class="form-label">Seu e-mail</label>
                  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                    name="email" placeholder="exemplo@email.com">
                  <div id="emailHelp" class="form-text">Nunca compartilharemos seu e-mail com mais ninguém.</div>
                  <div class="form-goup">
                    <label for="exampleInputEmail1" class="form-label">Sua senha</label>
                    <input type="password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                      name="password" placeholder="Senha">
                  </div>
                  <button type="submit" class="btn btn-primary">Criar conta</button>
              </form>

            </div>

            <div class="col-lg my-5">
              <h4>Faça seu login</h4>

              <p>Se você já tem uma conta, preencha o formulário abaixo:</p>

              <form class="form-login" action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-goup">
                  <label for="exampleInputEmail1" class="form-label">Seu e-mail</label>
                  <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                    name="email" placeholder="exemplo@email.com">
                  <div id="emailHelp" class="form-text">Nunca compartilharemos seu e-mail com mais ninguém.</div>
                  <div class="form-goup">
                    <label for="exampleInputEmail1" class="form-label">Sua senha</label>
                    <input type="password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                      name="password" placeholder="Senha">
                  </div>
                  <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
            </div>
          </div>

        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>